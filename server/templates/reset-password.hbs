<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Verify Your Email | TaskVortex</title>
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
    rel="stylesheet"
  />
  <style>
    /* Font smoothing */
    body, html {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      margin: 0;
      padding: 0;
      height: 100%;
      background: linear-gradient(135deg, #e0e7ff, #f7f7f7);
      background-size: 400% 400%;
      animation: gradientMove 15s ease infinite;
      font-family: 'Inter', Arial, sans-serif;
      color: #334155;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    @keyframes gradientMove {
      0% {background-position: 0% 50%;}
      50% {background-position: 100% 50%;}
      100% {background-position: 0% 50%;}
    }

    /* HEADER */
    header {
      background: linear-gradient(90deg, #6366f1 0%, #2563eb 100%);
      color: white;
      padding: 28px 48px 24px;
      box-shadow: 0 2px 14px rgba(37, 99, 235, 0.15);
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom-left-radius: 32px;
      border-bottom-right-radius: 32px;
      animation: fadeInDown 1s ease forwards;
    }
    .logo {
      display: flex;
      align-items: center;
      gap: 16px;
      font-weight: 900;
      font-size: 1.9rem;
      letter-spacing: 0.04em;
      user-select: none;
      cursor: default;
    }
    .logo-icon {
      width: 54px;
      height: 54px;
      background: linear-gradient(135deg, #fff 0%, #f0f4ff 100%);
      border-radius: 50%;
      box-shadow: 0 0 14px #6366f1cc;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 2.2rem;
      color: #6366f1;
      border: 2.5px solid #a5b4fc;
      animation: pulseGlow 2.5s ease-in-out infinite;
      user-select: none;
    }
    @keyframes pulseGlow {
      0%, 100% { box-shadow: 0 0 12px #6366f1aa; }
      50% { box-shadow: 0 0 24px #6366f1dd; }
    }
    nav a {
      color: white;
      text-decoration: none;
      font-weight: 600;
      margin-left: 24px;
      transition: color 0.3s ease;
    }
    nav a:hover {
      color: #a5b4fc;
    }
    .tagline {
      font-weight: 400;
      font-size: 1rem;
      opacity: 0.85;
      margin-top: 4px;
    }

    /* MAIN CONTAINER */
    main {
      flex-grow: 1;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 48px 24px 64px;
    }
    .container {
      background: #fff;
      max-width: 480px;
      width: 100%;
      border-radius: 24px;
      padding: 48px 40px 40px;
      box-shadow: 0 10px 36px rgba(99, 102, 241, 0.12), 0 4px 12px rgba(0, 0, 0, 0.05);
      animation: zoomFadeIn 1.2s ease-out forwards;
      text-align: center;
    }
    @keyframes zoomFadeIn {
      from { opacity: 0; transform: scale(0.97); }
      to { opacity: 1; transform: scale(1); }
    }
    .container h2 {
      font-size: 2.4rem;
      font-weight: 900;
      color: #2563eb;
      margin-bottom: 12px;
      letter-spacing: 0.02em;
    }
    .container p {
      font-size: 1.15rem;
      color: #475569;
      line-height: 1.6;
      margin-bottom: 28px;
    }
    .code-section {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      gap: 12px;
      margin-bottom: 24px;
    }
    .code-box {
      user-select: all;
      font-weight: 900;
      font-size: 2.6rem;
      letter-spacing: 0.3em;
      padding: 20px 56px;
      border-radius: 16px;
      background: rgba(235, 245, 255, 0.55);
      backdrop-filter: blur(7px);
      border: 2px solid rgba(99, 102, 241, 0.45);
      box-shadow: 0 2px 18px rgba(99, 102, 241, 0.15);
      color: #1e293b;
      transition: box-shadow 0.3s ease;
      animation: popIn 0.7s forwards;
      min-width: 280px;
      text-align: center;
    }
    .code-box:hover {
      box-shadow: 0 6px 32px #6366f1bb;
    }
    @keyframes popIn {
      0% { transform: scale(0.7); opacity: 0; }
      80% { transform: scale(1.08); opacity: 1; }
      100% { transform: scale(1); }
    }
    .copy-btn {
      background: linear-gradient(90deg, #6366f1 0%, #2563eb 100%);
      border: none;
      border-radius: 12px;
      color: white;
      font-weight: 700;
      font-size: 1.2rem;
      padding: 14px 34px;
      cursor: pointer;
      box-shadow: 0 3px 14px rgba(99, 102, 241, 0.3);
      transition: background 0.3s ease, transform 0.15s ease, box-shadow 0.3s ease;
      user-select: none;
      min-width: 120px;
    }
    .copy-btn:hover:not(:disabled) {
      background: linear-gradient(90deg, #4f46e5 0%, #1e40af 100%);
      transform: translateY(-3px);
      box-shadow: 0 8px 24px rgba(99, 102, 241, 0.4);
    }
    .copy-btn:active:not(:disabled) {
      background: #1e40af;
      transform: scale(0.96);
      box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
      transition: none;
    }
    .copy-btn:disabled {
      background: #cbd5e1;
      cursor: not-allowed;
      box-shadow: none;
      color: #94a3b8;
    }
    .message {
      font-style: italic;
      font-size: 1.05rem;
      color: #64748b;
      margin-bottom: 24px;
      user-select: none;
    }
    .timer {
      font-weight: 700;
      font-size: 1.1rem;
      color: #2563eb;
      letter-spacing: 0.04em;
      margin-left: 6px;
      transition: color 0.3s ease;
      user-select: none;
    }
    .timer.warning {
      color: #ef4444; /* red */
    }
    .resend {
      font-size: 1rem;
      color: #475569;
      margin-top: 14px;
      animation: fadeIn 1.5s ease forwards;
    }
    .resend a {
      color: #2563eb;
      font-weight: 600;
      cursor: pointer;
      text-decoration: underline;
      transition: color 0.25s ease;
    }
    .resend a:hover {
      color: #4f46e5;
    }

    /* SUPPORT SECTION */
    .support {
      background: #f0f4ff;
      padding: 24px 20px 20px;
      border-radius: 14px;
      color: #334155;
      font-size: 1.05rem;
      box-shadow: 0 2px 8px #6366f11a;
      margin-top: 32px;
      line-height: 1.5;
      user-select: none;
    }
    .support strong {
      color: #2563eb;
    }
    .support a {
      color: #2563eb;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s ease;
    }
    .support a:hover {
      color: #4f46e5;
      text-decoration: underline;
    }

    /* FOOTER */
    footer {
      background: #f1f5f9;
      padding: 32px 48px;
      border-top-left-radius: 32px;
      border-top-right-radius: 32px;
      color: #64748b;
      font-size: 1rem;
      text-align: center;
      box-shadow: 0 -2px 16px rgba(99, 102, 241, 0.06);
      user-select: none;
    }
    footer nav {
      margin-bottom: 16px;
    }
    footer nav a {
      margin: 0 14px;
      text-decoration: none;
      color: #64748b;
      font-weight: 600;
      transition: color 0.3s ease;
    }
    footer nav a:hover {
      color: #2563eb;
      text-decoration: underline;
    }
    footer .social-icons {
      margin-top: 8px;
      display: flex;
      justify-content: center;
      gap: 20px;
    }
    footer .social-icons a {
      color: #64748b;
      font-size: 1.3rem;
      transition: color 0.3s ease;
    }
    footer .social-icons a:hover {
      color: #2563eb;
    }

    /* Animations */
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    /* Responsive */
    @media (max-width: 600px) {
      header {
        flex-direction: column;
        align-items: flex-start;
        padding: 20px 24px;
        border-radius: 0;
      }
      nav a {
        margin-left: 0;
        margin-right: 18px;
        font-size: 1rem;
      }
      main {
        padding: 36px 16px 48px;
      }
      .container {
        padding: 36px 24px 32px;
        max-width: 100%;
        border-radius: 18px;
      }
      .code-box {
        font-size: 1.8rem;
        padding: 16px 40px;
        min-width: 200px;
      }
      .copy-btn {
        padding: 12px 24px;
        font-size: 1rem;
        min-width: 100px;
      }
      footer {
        padding: 24px 24px;
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="logo" aria-label="TaskVortex logo" title="TaskVortex">
      <div class="logo-icon" aria-hidden="true">🌀</div>
      TaskVortex
      <div class="tagline" style="margin-left: 20px; font-weight: 400; font-size: 1rem; opacity: 0.75;">
        Organize your work. Boost your productivity.
      </div>
    </div>
    <nav aria-label="Primary navigation">
      <a href="https://taskvortex.com/features" target="_blank" rel="noopener">Features</a>
      <a href="https://taskvortex.com/pricing" target="_blank" rel="noopener">Pricing</a>
      <a href="https://taskvortex.com/support" target="_blank" rel="noopener">Support</a>
      <a href="https://taskvortex.com/login" target="_blank" rel="noopener">Login</a>
    </nav>
  </header>

  <main>
    <section class="container" role="main" aria-labelledby="verifyTitle">
      <h2 id="verifyTitle">Verify Your Email Address</h2>
      <p>
        Thank you for choosing TaskVortex! To complete your registration,
        please enter the verification code sent to your email below.
      </p>
      <p>
        This helps us secure your account and ensure that it's really you.
        The code is valid for a limited time only.
      </p>
      <div class="code-section" aria-live="polite" aria-atomic="true">
        <span class="code-box" id="code">{{ verificationCode }}</span>
        <button
          class="copy-btn"
          id="copyBtn"
          onclick="copyCode()"
          aria-label="Copy verification code"
          title="Click to copy"
        >
          Copy
        </button>
      </div>

      <div class="message" role="status" aria-live="polite">
        This code will expire in
        <span class="timer" id="timer">60</span> seconds.<br />
        If you did not request this, please ignore this message.
      </div>

      <p class="resend" id="resendMessage" style="display: none;">
        Didn't receive it? <a href="#" onclick="resendCode()">Resend code</a>
      </p>

      <div class="support" aria-label="Support information">
        <strong>Need help?</strong> If you have trouble verifying your email or
        did not request this code, please contact our support team at
        <a href="mailto:support@taskvortex.com">support@taskvortex.com</a>.<br />
        <span style="color: #64748b; font-size: 0.95em;">
          Thank you for choosing TaskVortex to organize your work and boost your
          productivity!
        </span>
      </div>
    </section>
  </main>

  <footer>
    <nav aria-label="Footer navigation">
      <a href="https://taskvortex.com/about" target="_blank" rel="noopener">About Us</a>
      <a href="https://taskvortex.com/privacy" target="_blank" rel="noopener">Privacy Policy</a>
      <a href="https://taskvortex.com/terms" target="_blank" rel="noopener">Terms of Service</a>
      <a href="https://taskvortex.com/contact" target="_blank" rel="noopener">Contact</a>
    </nav>
    <div class="social-icons" aria-label="Social media links">
      <!-- Replace these with your real social links/icons -->
      <a href="#" aria-label="Facebook" title="Facebook" target="_blank" rel="noopener">📘</a>
      <a href="#" aria-label="Twitter" title="Twitter" target="_blank" rel="noopener">🐦</a>
      <a href="#" aria-label="LinkedIn" title="LinkedIn" target="_blank" rel="noopener">🔗</a>
    </div>
    <div style="margin-top: 14px; color: #94a3b8;">
      &copy; <span id="year"></span> TaskVortex. All rights reserved.
    </div>
  </footer>

  <script>
    // Dynamic year
    document.getElementById('year').textContent = new Date().getFullYear();

    let timer = 60;
    const timerContainer = document.getElementById('timer');
    const code = document.getElementById('code');
    const btn = document.getElementById('copyBtn');
    const resendMessage = document.getElementById('resendMessage');

    let interval = null;

    function startTimer() {
      if (interval) clearInterval(interval);
      timer = 60;
      timerContainer.textContent = timer;
      timerContainer.classList.remove('warning');
      code.style.opacity = '1';
      btn.disabled = false;
      btn.textContent = 'Copy';
      btn.style.background = 'linear-gradient(90deg, #6366f1 0%, #2563eb 100%)';
      btn.style.cursor = 'pointer';
      resendMessage.style.display = 'none';

      interval = setInterval(() => {
        timer--;
        timerContainer.textContent = timer;
        if (timer <= 10 && timer > 0) {
          timerContainer.classList.add('warning');
        }
        if (timer <= 0) {
          clearInterval(interval);
          timerContainer.textContent = 'expired';
          timerContainer.classList.remove('warning');
          timerContainer.style.color = '#64748b';
          code.style.opacity = 0.5;
          btn.disabled = true;
          btn.textContent = 'Expired';
          btn.style.background = '#cbd5e1';
          btn.style.cursor = 'not-allowed';
          resendMessage.style.display = 'block';
        }
      }, 1000);
    }

    function copyCode() {
      navigator.clipboard.writeText(code.textContent).then(() => {
        btn.textContent = 'Copied!';
        btn.style.background = '#22c55e';
        setTimeout(() => {
          btn.textContent = 'Copy';
          btn.style.background = 'linear-gradient(90deg, #6366f1 0%, #2563eb 100%)';
        }, 1600);
      }).catch(() => {
        alert('Failed to copy the code. Please copy manually.');
      });
    }

    function resendCode() {
      alert('A new verification code has been sent to your email.');
      // TODO: Call backend resend API here

      // For demonstration, reset code box text (in real app, backend sets it)
      code.textContent = 'XY98ZT12'; // example new code

      startTimer();
    }

    // Initialize timer on load
    startTimer();
  </script>
</body>
</html>
